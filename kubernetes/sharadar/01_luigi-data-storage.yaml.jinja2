kind: PersistentVolume
apiVersion: v1
metadata:
  name: luigi-pv-volume
  labels:
    type: local
    app: luigi
spec:
  storageClassName: manual
  capacity:
    storage: 50Gi
  accessModes:
    - ReadWriteMany
  hostPath:
    path: "{{ luigi_mount_dir }}"
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: luigi-pv-claim
  labels:
    app: luigi
spec:
  storageClassName: manual
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 50Gi
